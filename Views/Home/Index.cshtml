@{
    ViewData["Title"] = "Home";
}

<!-- GLOBAL NAV (same one you'll reuse on onboarding) -->
<nav class="main-nav">
    <div class="nav-left">
        <div class="nav-logo-dot"></div>
    </div>

    <div class="nav-links">
        <a asp-controller="Home" asp-action="Index">Timer</a>
        <a asp-controller="Garden" asp-action="Index">Garden</a>
        <a asp-controller="Stats" asp-action="Index">Stats</a>
    </div>
</nav>

<div class="hero">
    <!-- Decorative plants -->
    <img src="~/img/homeplant.png.png" class="hero-plant hero-plant-top" alt="Plant decoration" />
    <img src="~/img/homeplant.png.png" class="hero-plant hero-plant-bottom" alt="Plant decoration" />

    <!-- Main hero content -->
    <main class="hero-main">
        <section class="hero-left">
            <h1 class="hero-title">
                Focus you<br />
                can feel.
            </h1>
            <p class="hero-subtitle">
                Press the buzzer. Grow your plant
            </p>

            <!-- Use the pill button style you defined in CSS -->
            <a asp-controller="Onboarding"
   asp-action="Index"
   class="btn-pill btn-pill-primary">
    Get started
</a>

        </section>

        <section class="hero-right">
            <div class="hero-tomato-card">
                <img src="~/img/tomato.png.png" class="hero-tomato-img" alt="Tomato timer" />
            </div>
        </section>
    </main>
</div>
