@{
    ViewData["Title"] = "Analytics";
}

<div class="garden-page">
  <main class="garden-main" aria-label="Analytics view">
    <section class="garden-header">
      <h1 class="garden-title text-center">Your Growth Stats</h1>
        <p class="plant-status text-center" id="label">
            Track your productivity journey and watch your garden flourish!
        </p>

        <!-- Stats Cards -->
        <div class="analytics-cards">
          <div class="analytics-card">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="analytics-icon">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
            <h2 class="analytics-value">50</h2>
            <h3 class="analytics-title">Hours Focused</h3>
          </div>

          <div class="analytics-card">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="analytics-icon">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
            </svg>
            <h2 class="analytics-value">24</h2>
            <h3 class="analytics-title">Days Accessed</h3>
          </div>

          <div class="analytics-card analytics-card--highlight">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="analytics-icon">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.362 5.214A8.252 8.252 0 0 1 12 21 8.25 8.25 0 0 1 6.038 7.047 8.287 8.287 0 0 0 9 9.601a8.983 8.983 0 0 1 3.361-6.867 8.21 8.21 0 0 0 3 2.48Z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 18a3.75 3.75 0 0 0 .495-7.468 5.99 5.99 0 0 0-1.925 3.547 5.975 5.975 0 0 1-2.133-1.001A3.75 3.75 0 0 0 12 18Z" />
            </svg>
            <h2 class="analytics-value">8</h2>
            <h3 class="analytics-title">Day Streak</h3>
          </div>
        </div>

        <!-- Additional Stats -->
        <div class="analytics-secondary-stats">
          <div class="analytics-stat-item">
            <span class="analytics-stat-label">Total Sessions</span>
            <span class="analytics-stat-value">120</span>
          </div>
          <div class="analytics-stat-item">
            <span class="analytics-stat-label">Plants Unlocked</span>
            <span class="analytics-stat-value">3/9</span>
          </div>
          <div class="analytics-stat-item">
            <span class="analytics-stat-label">Average Session</span>
            <span class="analytics-stat-value">25 min</span>
          </div>
        </div>

        <!-- Weekly Activity Chart -->
        <div class="analytics-container">
          <h2 class="analytics-section-title">Weekly Activity</h2>
          <div class="analytics-chart">
            <div class="analytics-bar-group">
              <div class="analytics-bar" style="height: 60%"></div>
              <span class="analytics-bar-label">Mon</span>
            </div>
            <div class="analytics-bar-group">
              <div class="analytics-bar" style="height: 80%"></div>
              <span class="analytics-bar-label">Tue</span>
            </div>
            <div class="analytics-bar-group">
              <div class="analytics-bar" style="height: 45%"></div>
              <span class="analytics-bar-label">Wed</span>
            </div>
            <div class="analytics-bar-group">
              <div class="analytics-bar" style="height: 90%"></div>
              <span class="analytics-bar-label">Thu</span>
            </div>
            <div class="analytics-bar-group">
              <div class="analytics-bar" style="height: 70%"></div>
              <span class="analytics-bar-label">Fri</span>
            </div>
            <div class="analytics-bar-group">
              <div class="analytics-bar" style="height: 30%"></div>
              <span class="analytics-bar-label">Sat</span>
            </div>
            <div class="analytics-bar-group">
              <div class="analytics-bar" style="height: 50%"></div>
              <span class="analytics-bar-label">Sun</span>
            </div>
          </div>
        </div>

        <!-- Recent Achievements -->
        <div class="analytics-achievements">
          <h2 class="analytics-section-title">Recent Milestones</h2>
          <div class="achievement-list">
            <div class="achievement-item">
              <div class="achievement-icon">üå±</div>
              <div class="achievement-content">
                <h4 class="achievement-title">First Plant Unlocked!</h4>
                <p class="achievement-date">3 days ago</p>
              </div>
            </div>
            <div class="achievement-item">
              <div class="achievement-icon">‚è∞</div>
              <div class="achievement-content">
                <h4 class="achievement-title">50 Hours Milestone</h4>
                <p class="achievement-date">1 week ago</p>
              </div>
            </div>
            <div class="achievement-item">
              <div class="achievement-icon">üî•</div>
              <div class="achievement-content">
                <h4 class="achievement-title">7 Day Streak</h4>
                <p class="achievement-date">2 days ago</p>
              </div>
            </div>
          </div>
        </div>

    </section>
  </main>
</div>