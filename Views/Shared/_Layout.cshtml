<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PomodoroPlant</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PomodoroPlant.styles.css" asp-append-version="true" />
    <link href="https://db.onlinewebfonts.com/c/340730b16e1fc32fe6c5e2ce1d020a54?family=Nohemi+Med" rel="stylesheet"
        type="text/css" />
</head>

<body>
    <header class="plant-header">
        <div class="header-dot"></div>
        <button class="header-menu" type="button">
            <!-- simple hamburger icon -->
            <span></span>
            <span></span>
            <span></span>
        </button>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

