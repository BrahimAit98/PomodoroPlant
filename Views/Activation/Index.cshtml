@{
    ViewData["Title"] = "Activation";
}

<header class="hero-nav">
    <nav class="main-nav">
        <div class="nav-left">
            <div class="nav-logo-dot"></div>
        </div>

        <div class="nav-links">
            <a asp-controller="Home" asp-action="Index">Timer</a>
            <a asp-controller="Garden" asp-action="Index">Garden</a>
            <a asp-controller="Stats" asp-action="Index">Stats</a>
        </div>
    </nav>
</header>

<main class="activation-page">
    <div class="activation-inner">
        <h1 class="activation-title">
            Enter your activation code
        </h1>

        <p class="activation-subtitle">
            Youâ€™ll find your 6-digit code on the bottom of your Pomodoro Buzzer.
        </p>

        <form class="activation-form">
            <div class="activation-code-inputs">
                <input type="text" maxlength="1" inputmode="numeric" class="activation-box" />
                <input type="text" maxlength="1" inputmode="numeric" class="activation-box" />
                <input type="text" maxlength="1" inputmode="numeric" class="activation-box" />
                <input type="text" maxlength="1" inputmode="numeric" class="activation-box" />
                <input type="text" maxlength="1" inputmode="numeric" class="activation-box" />
                <input type="text" maxlength="1" inputmode="numeric" class="activation-box" />
            </div>

            <a asp-controller="BuyBuzzer"
               asp-action="Index"
               class="btn-pill btn-pill-primary activation-submit">
                Continue
            </a>
        </form>
    </div>
</main>

@section Scripts {
    <script>
        // Auto-focus to the next box when a digit is typed
        document.querySelectorAll('.activation-box').forEach((box, index, all) => {
            box.addEventListener('input', () => {
                if (box.value.length === box.maxLength && index < all.length - 1) {
                    all[index + 1].focus();
                }
            });
        });
    </script>
}
