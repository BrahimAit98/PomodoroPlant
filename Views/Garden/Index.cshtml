<script>
  function openPlantModal(plantName, hours) {
    document.getElementById('modalPlantName').textContent = plantName;
    document.getElementById('modalHours').textContent = hours;
    document.getElementById('plantModal').style.display = 'flex';
  }

  function closePlantModal() {
    document.getElementById('plantModal').style.display = 'none';
  }
</script>